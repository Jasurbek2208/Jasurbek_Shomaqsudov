{
  "name": "shomaqsudov_jasurbek_portfolio",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "start": "vite --open /dist/index.html",
    "dev": "vite",
    "host": "vite --host",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "deploy": "scp -r dist package.json root@SERVER_IP_ADRESS:/var/www/shomaqsudov.uz/",
    "preview": "vite preview"
  },
  "author": {
    "name": "Jasurbek Shomaqsudov",
    "email": "jasurbekshomaqsudov2004@gmail.com",
    "url": "https://shomaqsudov.uz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jasurbek2208/react-vite-3d-project"
  },
  "license": "MIT",
  "homepage": "https://shomaqsudov.uz",
  "bugs": {
    "url": "https://github.com/Jasurbek2208/react-vite-3d-project/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all",
    "jsxSingleQuote": true,
    "arrowParens": "always",
    "printWidth": 200,
    "tabWidth": 2,
    "useTabs": false,
    "endOfLine": "auto",
    "bracketSameLine": true
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "eslintIgnore": [
    "vite.config.ts"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@types/react-simple-maps": "^3.0.0",
    "@types/styled-components": "^5.1.26",
    "axios": "^1.4.0",
    "million": "^3.0.6",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.11.0",
    "react-simple-maps": "^3.0.0",
    "styled-components": "^5.3.10"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "terser": "^5.29.2",
    "typescript": "^5.0.2",
    "vite": "^4.3.2",
    "vite-tsconfig-paths": "^4.3.2"
  }
}
